record.py:
class Record():
    note={}
    titlelist=[]

    def write_note(self):
        title=input('è¯·è¾“å…¥é¢˜ç›®ï¼š')
        text=input('è¯·è¾“å…¥æ­£æ–‡ï¼š')
        self.note[title]=text
        if title not in self.titlelist:
            self.titlelist.append(title)

    def read_note(self):
        title = input('è¯·è¾“å…¥è¦æŸ¥çœ‹çš„æ—¥è®°é¢˜ç›®ï¼š')
        if title in self.titlelist:
            print(self.note[title])
        else:
            print('æ²¡æœ‰æ‰¾åˆ°è¿™ç¯‡æ—¥è®°')

    def del_note(self):
        title = input('è¯·è¾“å…¥è¦åˆ é™¤çš„æ—¥è®°é¢˜ç›®ï¼š')
        if title in self.titlelist:
            self.note.pop(title)
            print('å·²åˆ é™¤'+title)
        else:
            print('æ²¡æœ‰æ‰¾åˆ°è¿™ç¯‡æ—¥è®°')

statistics.py:
class Statistics():
    score=0
    word_count = {}
    mood_words_list=[
        'å¼€å¿ƒ',
        'é«˜å…´',
        'å¾—æ„',
        'å¹³æ·¡',
        'æ— èŠ',
        'çƒ¦',
        'éƒé—·',
        'ä¸å¼€å¿ƒ',
    ]

    def get_word_count(self,dict):
        textcollect=''
        for text in dict.values():
            textcollect += text

        #åˆå§‹åŒ–è®¡æ•°å­—å…¸
        for word in self.mood_words_list:
            self.word_count[word]=0

        for word in self.mood_words_list:
            if word in textcollect:
                self.word_count[word]=textcollect.count(word)

        self.word_count['å¼€å¿ƒ']-=self.word_count['ä¸å¼€å¿ƒ']

    def calc_mood_score(self,dict):
        self.get_word_count(dict)
        tmp=self.word_count['å¼€å¿ƒ']+self.word_count['é«˜å…´']+self.word_count['å¾—æ„']
        self.score += tmp * 5

        tmp =self.word_count['å¹³æ·¡']+self.word_count['æ— èŠ']
        self.score += tmp * 0

        tmp=self.word_count['çƒ¦']+self.word_count['éƒé—·']+self.word_count['ä¸å¼€å¿ƒ']
        self.score -= tmp * 5

